@model ModalCatalogViewModel

<div class="modal-content">

    <div class="modal-header">
        <h4 class="modal-title">Каталог</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>

    <form asp-action="CreateEdit" asp-controller="Catalog" method="post" enctype="multipart/form-data">

        <div class="modal-body form-horizontal">

            <input asp-for="CatalogDTO.Id" type="hidden" class="form-control" />
            <input asp-for="CatalogDTO.IsActive" type="hidden" class="form-control" />

            <div class="form-group row">
                <label asp-for="CatalogDTO.Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CatalogDTO.Title" placeholder="Название каталога" class="form-control" />
                    <span asp-validation-for="CatalogDTO.Title"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CatalogDTO.Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="CatalogDTO.Description" class="form-control" placeholder="Описание каталога"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CatalogDTO.ParentCatalogId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="CatalogDTO.ParentCatalogId" placeholder="Родительский каталог" class="form-control">
                        @foreach (CatalogDTO catalogDTO in Model.CatalogList)
                        {
                            <option value="@catalogDTO.Id">@catalogDTO.Title</option>
                        }
                    </select>
                </div>
            </div>

        </div>

        <div class="modal-footer">
            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Отмена</button>
            <button class="btn btn-success relative" id="btnSubmit" type="submit">
                <i class="loader"></i>
                Сохранить
            </button>
        </div>

    </form>

</div>


