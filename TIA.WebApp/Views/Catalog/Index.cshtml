@model CatalogViewModel
@{
    ViewData["Title"] = "Catalog";
}
<div class="mainDiv">
    <div class="leftSide">
        @{await Html.PartialAsync("_CatalogTree", Model.CatalogTree);}
    </div>

    <div class="rightSide">
        @{
            if (Model.Catalog == null)
            {
                <h2> Стартовая </h2>
            }
            else
            {
                <asp:GridView ID="GridView1" runat="server"
                              data="@Model.Catalog.Products" AutoGenerateColumns="False" DataKeyNames="Id">
                    <Columns>
                        <asp:BoundField DataField="Id" HeaderText="Id" />
                        <asp:BoundField DataField="Title" HeaderText="Title" />
                    </Columns>
                </asp:GridView>
            }
        }
    </div>
</div>

